<%- include('header') -%>
<h1 class="text-xl mt-16 ">My Little Spider: <span
            class="font-bold ml-2 underline decoration-gray-400 text-3xl"><%= roommate.name %></span>,</h1>
<h2 class="text-l mt-1 mb-12">can be found at:
    <span class="font-bold text-xl"><%= roommate.location %></span> with
    <span
            class="font-bold text-xl"><%= roommate.numOfNightmares %></span>
    nightmare(s).
</h2>
<div class="flex flex-col">
    <nav class="flex justify-between">
        <a class="transition hover:bg-gray-200 focus:bg-gray-200 focus:outline-gray-400 mb-2 font-semibold py-2 px-4 rounded"
           href="/">↩️ Go back</a>
        <a class="transition hover:bg-gray-200 focus:bg-gray-200 focus:outline-gray-400 mb-2 font-semibold py-2 px-4 rounded"
           href="/roommate/<%= roommate.id %>/entries/new">➕ Add entry</a>
    </nav>
    <table>
        <thead>
        <tr>
            <th scope="col" class="bg-gray-300 text-gray-800 text-left p-4 font-medium">Date</th>
            <th scope="col" class="bg-gray-300 text-gray-800 text-center py-4 font-medium w-96">Text</th>
            <th scope="col" class="bg-gray-300 text-gray-800 text-center p-4 font-medium">Respect gained
            </th>
            <th scope="col" class="bg-gray-300 text-gray-800 text-center p-4 font-medium rounded-r">
                Actions
            </th>
        </tr>
        </thead>
        <tbody>

        <% entries.forEach((entry) => { %>
            <tr class="leading-10">
                <td class="border-b-2 px-4 py-1"><%= entry.date %></td>
                <td class="border-b-2 p-1 text-center"><%= entry.text %></td>
                <td class="border-b-2 p-1 text-center">+<%= entry.respectGained %></td>
                <td class="border-b-2 p-1">
                    <a class="transition hover:bg-violet-100 focus:bg-violet-100 focus:outline-violet-400 p-2 rounded"
                       href="/roommate/<%= roommate.id %>/entries/<%= entry.id %>/edit">✏️</a>
                    <a class="transition hover:bg-red-100 focus:bg-red-100 focus:outline-red-400 p-2 rounded"
                       href="/roommate/<%= roommate.id %>/entries/<%= entry.id %>/delete">❌</a>
                </td>
            </tr>
        <% }); %>

        <% if (!entries || !Array.isArray(entries) || entries.length === 0) { %>
            <tr>
                <td colspan="4" class="pt-6 p-1 text-center">
                    No entry available 😭
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<%- include('footer') -%>